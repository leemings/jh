//从cookie取出个人形象编号，进行组成人物形象，如果不符合规格，则返回-1
function InitShow()
{
	var t, j, x;
	var layers, count;
	if(userid != null && userid != '')
		var itemnos = getCookie('myshow_'+userid);
	else
		var itemnos = '';
	if(itemnos == '')
	{
		return -1;
	}
	var showArray = itemnos.split('|');
	var ret = CheckIllegal(showArray);
	if(ret != 0)
		return -1;
	for (var i=0; i<25; i++)
	{
		if(showArray[i] != '')
		{
			j = i + 1;
			TakeLayerIMG(j, showArray[i]);
			
			//查看各层中有无相同的item号，如果有，该层FileNo为x1_x2_x3...
//alert("查看各层中有无相同的item号");
			layers = '';
			count=0;
			for(x=0; x<25; x++)
			{
//if(showArray[x] != '')
//alert(i + ":当前itemno[" + showArray[i] + "], 层" + (x+1) + "的itemno[" + showArray[x] + "]...now layers[" + layers + "]");
				if(showArray[x] == showArray[i])
				{
					if(count == 0)
						layers = (x+1);
					else
						layers = layers + '_' + (x+1);

					count ++;
//alert("相等!count=" + count + ", layers=" + layers);
				}
			}

			t = GetPart(j)
			t.preFileNo = showArray[i] + '.' + layers;
		}
	}
	return 0;
}

//检查层编号是否合法, 7,8,9,11,13,14,18 七个基本层不可为空
function CheckIllegal(showArray)
{
	
//alert(showArray[6] + "," + showArray[7]);
	if((showArray[6] != '')
		&& (showArray[7] != '')
		&& (showArray[8] != '')
		&& (showArray[10] != '')
		&& (showArray[12] != '')
		&& (showArray[13] != '')
		&& (showArray[17] != ''))
		return 0;
	else
		return -1;

}


//将整体形象编号存入cookie，格式为myshow=xx|xx|xx|...|xx|xx
function SaveCookieShow()
{
	var tFileNo;
	var tmpArray;
	var itemnos;

	//得到整体形象编号
	var t = GetPart(1);
	if(t.preFileNo)
	{
		tmpArray = t.preFileNo.split('.');
		itemnos = tmpArray[0];
	}
	else
	{
		itemnos='';
	}
	for (var i=2; i<26; i++)
	{
		t = GetPart(i);
		if(t.preFileNo)
		{
			tmpArray = t.preFileNo.split('.');
			itemnos = itemnos + '|' + tmpArray[0];
		}
		else
		{
			itemnos = itemnos + '|';
		}
	}
		//存入cookie
		//setCookie('myshow', itemnos);
		if(userid != null && userid != '') 
			cookies	= "myshow_" + userid + "=" + itemnos;
		UpdateCookies.fire();

}

